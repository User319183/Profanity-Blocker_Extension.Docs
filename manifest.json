{
    "manifest_version": 2,
    "name": "Profanity-Blocker",
    "version": "1.2",
    "icons": {"128": "images/logo128.png"},
    "description": "A bad word blocker that censors bad words, links, domains, and websites!",
    "background": {
        "scripts": ["page.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.facebook.com/*",
                "https://www.twitter.com/*",
                "https://www.instagram.com/*",
                "<all_urls>"
            ],
            "js": [
                "content.js"
             ],
            "run_at": "document_end",
            
            "all_frames": true
        }
    ],
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",

   	"browser_action": {
    	"default_popup": "popup.html",
    	"default_icon": "images/logo.png"
    },
    "options_ui":{
        "page": "options.html"
    },
    "permissions": [ 
        "storage",
        "unlimitedStorage",
        "tabs",
        "https://ajax.googleapis.com/"
     ],
    "incognito": "split"
 }